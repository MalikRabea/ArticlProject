@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "هل نسيت كلمة السر ؟";
}
<br />
<br />
<br />
<h1 style="font-family:Cairo ; direction:rtl">@ViewData["Title"]</h1>
@* <h2 style="font-family:Cairo ; justify-content:center">Enter your email.</h2> *@
<hr />
<div style="font-family:Cairo; justify-content:center ; align-content:center" class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
