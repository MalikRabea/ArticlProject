@page
@model AdminIndexModel
@{
	Layout = "_LayoutAdmin";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
        color: #fff;
        padding-top: 50px;
    }

    .dashboard-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        transition: transform 0.3s ease-in-out;
        cursor: pointer;
    }

        .dashboard-card:hover {
            transform: scale(1.05);
        }

    .dashboard-icon {
        font-size: 50px;
        margin-bottom: 20px;
        color: #ffd700;
    }

    .dashboard-number {
        font-size: 48px;
        font-weight: bold;
    }

    .dashboard-label {
        font-size: 18px;
        opacity: 0.9;
    }

    .welcome-section {
        text-align: center;
        margin-bottom: 50px;
    }

        .welcome-section h1 {
            font-size: 42px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .welcome-section p {
            font-size: 18px;
            opacity: 0.8;
        }
</style>

<div class="container" id="Cont">
    <section class="welcome-section" data-aos="fade-up">
        <h1>👋 مرحباً بك</h1>
        <a>يسعدنا انضمامك إلينا. من خلال لوحة التحكم هذه يمكنك إدارة محتواك على الموقع بسهولة وأناقة.</a>
    </section>

    <div class="row g-4">
        <div class="col-md-4" data-aos="zoom-in">
            <div class="dashboard-card p-4 text-center h-100">
                <div class="dashboard-icon"><i class="fas fa-layer-group"></i></div>
                <div class="dashboard-number">@Model.AllPost</div>
                <div class="dashboard-label">مشاركاتك الكلية</div>
            </div>
        </div>
        <div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
            <div class="dashboard-card p-4 text-center h-100">
                <div class="dashboard-icon"><i class="fas fa-calendar-alt"></i></div>
                <div class="dashboard-number">@Model.PostThisYear</div>
                <div class="dashboard-label">مشاركاتك هذه السنة</div>
            </div>
        </div>
        <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
            <div class="dashboard-card p-4 text-center h-100">
                <div class="dashboard-icon"><i class="fas fa-calendar-week"></i></div>
                <div class="dashboard-number">@Model.PostLastMonth</div>
                <div class="dashboard-label">مشاركاتك هذا الشهر</div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init();
</script>
