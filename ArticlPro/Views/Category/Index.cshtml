@model IEnumerable<ArticlPro.Core.Category>

@{
	ViewData["Title"] = "قائمة الاصناف";
	Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<section class="container py-5" style="font-family: 'Cairo', sans-serif;background-color: #f0f0f0;" data-aos="fade-up" data-aos-duration="1000">
    <h1 class="mb-5 text-center fw-bold text-primary">الأصناف</h1>

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <a asp-action="Create" class="btn btn-primary px-4 shadow-sm" data-aos="zoom-in" data-aos-delay="200">
            <i class="fa fa-plus me-2"></i>إضافة صنف جديد
        </a>

        <form method="get" asp-action="Search" class="d-flex flex-grow-1 flex-md-grow-0" role="search" aria-label="بحث الأصناف" data-aos="fade-left" data-aos-delay="300">
            <input type="search" name="SearchItem" class="form-control me-2 shadow-sm" placeholder="ابحث عن صنف" aria-label="بحث عن صنف" style="min-width: 250px;">
            <button type="submit" class="btn btn-primary shadow-sm">
                <i class="fa fa-search"></i> بحث
            </button>
        </form>
    </div>

    <div class="table-responsive" data-aos="fade-up" data-aos-delay="400">
        <table class="table table-striped table-hover align-middle text-center rounded-3 overflow-hidden shadow-sm">
            <thead class="table-primary text-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>العمليات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2 shadow-sm">
                                <i class="fa fa-edit"></i> تعديل
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger shadow-sm"
                               onclick="return confirm('هل أنت متأكد من حذف هذا الصنف؟');">
                                <i class="fa fa-trash"></i> حذف
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Pagination" class="d-flex justify-content-center mt-5" data-aos="fade-up" data-aos-delay="500">
        <ul class="pagination gap-3">
            <li class="page-item">
                <a asp-action="Index" asp-route-id="0" class="page-link btn btn-outline-primary shadow-sm">الصفحة الأولى</a>
            </li>

            @if (Model.Any())
            {
                <li class="page-item">
                    <a asp-action="Index" asp-route-id="@Model.First().Id" class="page-link btn btn-outline-primary shadow-sm">السابق</a>
                </li>
                <li class="page-item">
                    <a asp-action="Index" asp-route-id="@Model.Last().Id" class="page-link btn btn-outline-primary shadow-sm">التالي</a>
                </li>
            }
        </ul>
    </nav>
</section>
